<div class='container'>
<div class='row'>
<div class='col-xs-3'>
  <h2>User info</h2>
  <table class='table'>
    <tr><%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></tr> 
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>
  <div class='row'>
    <%= link_to "", edit_user_path(user), :class=>"glyphicon glyphicon-wrench" %>
  </div>


  <h2>New book</h2>

  <%= form_for(Book.new) do |f| %>

    <div class="field row">
    
      <label for="book_title">
      <br>Title
      </label>
      <%= f.text_field :title %>
    </div>

    <div class="field row">
      <label for="book_opinion">
      Opinion
      </label>
      <%= f.text_area :body %>
    </div>

    <div class="actions row">
      <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
    </div>
  <% end %>
</div>