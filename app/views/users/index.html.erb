<%= render '/left', book: @book, user: @user %>

<div class='col-xs-9'>
<h2>Users</h2>

<table class='table table-hover table-inverse'>
<thead>
<tr> 
  <th>image</th>
  <th>name</th>
  <th></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
    <td><%= link_to user.name, user_path(user.id)%></td>
    <td><br><%=link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
  </thead>
</table>
</div>
</div>
</div>